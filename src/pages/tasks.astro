---
import Layout from "../layouts/Layout.astro";
import HeaderCourse from "../components/HeaderCourse.astro";
import ForumList from "../components/ForumList.astro";
import TaskList from "../components/TaskList.astro";

---
<Layout>
  <main class="w-full px-8">
    <HeaderCourse />
    <div class="flex flex-col gap-4 py-4 ">
      <div class="pt-4">
        <div class="flex flex-row gap-2">
          <h1 class="font-bold text-xl">Todas las tareas </h1><span class="text-xl text-[#000f37] font-extrabold">(12)</span>
        </div>
        <div class="flex flex-col md:flex-row gap-6 items-start justify-between">
          <div><span class="font-bold">Se listarán todos las tareas</span>, las que suman para tu promedio final se indicarán como <span class="font-bold">calificadas</span> y las que no se indicarán como <span class="font-bold">no calificadas</span>.</div>
          <div class="flex flex-col lg:flex-row gap-2 items-start lg:items-center justify-center w-50 lg:w-80">
            <label for="status-filter" class="text-sm font-bold flex-1/2">Filtrar por estado</label>
            <div class="w-full bg-white rounded border border-black px-4 py-2 flex-1/2">
              <select class="w-full"  name="status-filter" id="status-filter">
                <option value="all">Todos</option>
                <option value="graded">Programada</option>
                <option value="ungraded">Por entregar</option>
                <option value="completed">Entregada</option>
                <option value="not-completed">Vencida</option>
              </select>
          </div>
          </div>
        </div>
      </div>
      <TaskList />
  </main>
</Layout>