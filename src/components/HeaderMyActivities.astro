---
import { Icon } from "astro-icon/components"
import { useState } from 'react';
---

<div class="flex flex-col">
  <div class="flex flex-row items-center justify-between bg-transparent min-h-[48px] py-4">
    <div class="flex flex-row items-center gap-4">
      <div class="flex flex-row gap-2">
        <h1 class="font-bold text-xl">Mis actividades </h1>
        <span class="text-xl text-[#000f37] font-extrabold">(18)</span>
      </div>
      <button
        id="openModalBtn"
        class="flex flex-row items-center gap-1 cursor-pointer border-2 border-[#0661fc] rounded-full p-1 hover:bg-[rgba(6,96,252,0.1)] hover:scale-[105%] transition-all duration-200"
        onclick="document.getElementById('taskModal').classList.remove('hidden')"
      >
        <div class="border-[#0661fc] text-[#0661fc] z-10">
          <Icon name="Plus" class="w-5 h-5" />
        </div>
      </button>
    </div>

    <div class="flex flex-row items-center gap-1 cursor-pointer border-2 border-[#0661fc] rounded-md px-3 py-2 hover:bg-[rgba(6,96,252,0.1)] hover:scale-[105%] transition-all duration-200">
      <span class="text-[#0661fc] font-bold">Ordenar</span>
      <div class="border-[#0661fc] text-[#0661fc]">
        <Icon name="Sort" class="w-6 h-6" />
      </div>
    </div>
  </div>

  <div id="taskModal" class="fixed inset-0 bg-[rgba(0,0,0,0.3)] flex items-center justify-center z-50 hidden">
    <div class="bg-white p-6 rounded-md shadow-xl w-[90%] max-w-md space-y-4 relative">
      <h2 class="text-xl font-bold text-[#000f37]">Nueva Tarea</h2>

      <div class="flex flex-col gap-2">
        <label class="text-sm font-semibold">Nombre de la tarea</label>
        <input type="text" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#0661fc]" placeholder="Escribe el nombre..." />
      </div>

      <div class="flex flex-col gap-2">
        <label class="text-sm font-semibold">Fecha de inicio</label>
        <input type="date" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#0661fc]" />
      </div>

      <div class="flex flex-col gap-2">
        <label class="text-sm font-semibold">Fecha de fin</label>
        <input type="date" class="border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-[#0661fc]" />
      </div>

      <div class="flex flex-col gap-2">
        <label class="text-sm font-semibold">Importancia</label>
        <div class="flex gap-4 mt-1">
          <div class="flex flex-row-reverse items-center gap-2">
            <span class="text-[#07d4cf] font-bold">Importante</span>
            <div class="rounded-full border-2 border-[#07d4cf] text-[#07d4cf] hover:bg-[rgba(7,212,208,0.1)] hover:scale-[105%] transition-all duration-100 p-1 cursor-pointer">
              <Icon name="UpArrow" class="w-6 h-6" />
            </div>
          </div>
          <div class="flex flex-row-reverse items-center gap-2">
            <span class="text-[#e04c65] font-bold">No importante</span>
            <div class="rounded-full border-2 border-[#e04c65] text-[#e04c65] hover:bg-[rgba(224,76,101,0.1)] hover:scale-[105%] transition-all duration-100 p-1 cursor-pointer">
              <Icon name="DropArrow" class="w-6 h-6" />
            </div>
          </div>
        </div>
      </div>

      <div class="flex justify-end gap-2 pt-4">
        <button
          onclick="document.getElementById('taskModal').classList.add('hidden')"
          class="px-4 py-2 rounded-md border border-gray-300 hover:bg-gray-100 cursor-pointer"
        >
          Cancelar
        </button>
        <button class="bg-white text-[#0661fc] border-1 border-[#0661fc] px-4 py-2 rounded-md hover:bg-[rgba(4,70,199,0.1)] cursor-pointer">Agregar</button>
      </div>
    </div>
  </div>
</div>
