---
interface Props {
  topicName: string;
}

const { topicName } = Astro.props;

---

<div class="flex flex-col bg-white rounded-br-sm rounded-bl-sm px-4 gap-4 py-4 first-of-type:pt-4">
  <div class="w-full h-full py-4 px-5 rounded-md border-b-[1px] border-gray-300 cursor-pointer hover:bg-gray-50 shadow-sm">
    <p>{topicName}</p>
  </div>
</div>