---
import { Icon } from "astro-icon/components";

interface Props {
  status: "Entregado" | "No entregado";
  course: string;
  waType?: string;
  date?: string;
  time?: string;
}

const { status, course, waType, date, time } = Astro.props;

let colorStatus = "#bb4c01";
switch (status) {
  case "Entregado":
    colorStatus = "#bb4c01";
    break;
  case "No entregado":
    colorStatus = "#000000";
    break;
  default:
    colorStatus = "#bb4c01";
    break;
}

let bgColor = "#ffffff";
if (status === "Entregado") {
  bgColor = "#e0f7fa"; // Light blue for delivered
} else if (status === "No entregado") {
  bgColor = "#ffebee"; // Light red for not delivered
}

---

<div class="flex flex-col border-2 border-gray-800 rounded-lg p-4 shadow-lg w-full gap-4 h-fit" style={`background-color: ${bgColor};`}>
  <div class="flex flex-row flex-wrap gap-4 items-center justify-between">
    <h2 class="text-xl font-bold">{course}</h2>
    <p>Vence: {date} a las {time}</p>
  </div>

  <div class="flex flex-row flex-wrap items-center justify-between gap-4">
    <h2 class="text-xl font-bold">{waType}</h2>
    <div class="flex items-center justify-center">
      <div class="flex items-center justify-start gap-2 mb-2 px-4 p-2 rounded-2xl max-w-fit" style={`background-color: ${colorStatus};`}>
        <Icon name="Progress" class="w-3 h-3 text-white" />
        <p class="text-sm font-bold text-white">{status}</p>
      </div>
    </div>
  </div>


</div>